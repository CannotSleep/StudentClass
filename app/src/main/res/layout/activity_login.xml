<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/login_title_im"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/longinlogo"/>

    <LinearLayout
        android:layout_below="@id/login_title_im"
        android:layout_gravity="center_horizontal"
        android:id="@+id/longin_linea1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/longin_tv1"
            android:textSize="18dp"/>

        <EditText
            android:gravity="center"
            android:layout_weight="5"
            android:id="@+id/login_num_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape5"
            android:hint="请输入学号"
            android:textSize="15dp"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/longin_linea1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/login_linea2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/longin_tv2"
            android:textSize="18dp"/>

        <EditText
            android:gravity="center"
            android:layout_weight="5"
            android:id="@+id/login_password_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape5"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="15dp"
            />
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/login_btn"
        android:layout_width="220dp"
        android:layout_height="23dp"
        android:layout_below="@id/login_linea2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:background="@drawable/login_btn_shape"
        android:text="@string/login_btn"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_below="@id/login_btn"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/login_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:layout_marginTop="15dp"
            android:text="登陆遇到问题？"
            android:textSize="15dp"/>

        <TextView
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/login_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:layout_marginTop="15dp"
            android:text="@string/longin_tv4"
            android:textSize="15dp"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </LinearLayout>



</RelativeLayout>